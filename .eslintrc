{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "max-len": ["error", 120],
    "no-underscore-dangle": 0,
    "comma-dangle": 0,
    "react/prefer-es6-class": 0,
    "react/jsx-indent": [2, 4],
    "react/jsx-indent-props": [2, 4],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ]
    // http://eslint.org/docs/rules/indent
  },
  "settings": {
    "import/resolve": {
      "extensions": [
        ".es6",
        ".js",
        ".jsx"
      ]
    }
  }
}